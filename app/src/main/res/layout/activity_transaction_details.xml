<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/split_color"
    android:orientation="vertical">

    <com.doughnut.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/recycler_view"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_detail_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_dialog_bg" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layout_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_dialog_bg"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp">

                        <LinearLayout
                            android:id="@+id/layout_hash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="当前交易哈希值"
                                    android:textColor="@color/color_detail_address"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/ic_copy_receive" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_hash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text=""
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="20dp"
                            android:background="@color/split_color" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_type_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易类型"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_type_tmp"
                                android:ellipsize="middle"
                                android:gravity="right|center"
                                android:singleLine="true"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_from_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易发起方"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:id="@+id/layout_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_from_tmp">

                                <TextView
                                    android:id="@+id/tv_from"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/img_copy"
                                    android:ellipsize="middle"
                                    android:gravity="center|right"
                                    android:singleLine="true"
                                    android:textColor="@color/color_detail_address"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/img_copy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_copy_receive" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_amount_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="转账金额"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_token"
                                android:layout_toRightOf="@+id/tv_amount_tmp"
                                android:gravity="center|right"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="middle"
                                android:gravity="center"
                                android:maxWidth="80dp"
                                android:singleLine="true"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_entrust_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_entrust_amount_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="委托金额"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_entrust_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_entrust_token"
                                android:layout_toRightOf="@+id/tv_entrust_amount_tmp"
                                android:gravity="center|right"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_entrust_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toLeftOf="@+id/tv_right"
                                android:ellipsize="middle"
                                android:gravity="center|right"
                                android:maxWidth="80dp"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/tv_pay_amount"
                                android:gravity="center"
                                android:text="\u2192"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_pay_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toLeftOf="@+id/tv_pay_token"
                                android:gravity="center"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_pay_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:ellipsize="middle"
                                android:gravity="center|right"
                                android:maxWidth="80dp"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_entrust_amount_none"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_entrust_amount_tmp"
                                android:background="@color/white"
                                android:gravity="center|right"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_value_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="委托价格"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_value_token"
                                android:layout_toRightOf="@+id/tv_value_tmp"
                                android:gravity="right|center"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_value_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="middle"
                                android:gravity="center"
                                android:maxWidth="80dp"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_to_v"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_to_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易对家"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:id="@+id/layout_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_to_tmp">

                                <TextView
                                    android:id="@+id/tv_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/img_copy1"
                                    android:ellipsize="middle"
                                    android:gravity="right|center"
                                    android:singleLine="true"
                                    android:textColor="@color/color_detail_address"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/img_copy1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_copy_receive" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_turnover_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_turnover_amount_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="成交金额"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_turnover_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_turnover_token"
                                android:layout_toRightOf="@+id/tv_turnover_amount_tmp"
                                android:gravity="center|right"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_turnover_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toLeftOf="@+id/tv_turnover_right"
                                android:ellipsize="middle"
                                android:gravity="center|right"
                                android:maxWidth="80dp"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_turnover_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/tv_turnover_pay_amount"
                                android:gravity="center"
                                android:text="\u2192"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_turnover_pay_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toLeftOf="@+id/tv_turnover_pay_token"
                                android:gravity="center"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_turnover_pay_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:ellipsize="middle"
                                android:gravity="center|right"
                                android:maxWidth="80dp"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_turnover_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_turnover_value_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="成交价格"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_turnover_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_turnover_value_token"
                                android:layout_toRightOf="@+id/tv_turnover_value_tmp"
                                android:gravity="right|center"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_turnover_value_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_transfer_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_transfer_type_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易方式"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_transfer_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_transfer_type_tmp"
                                android:gravity="center|right"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_gas_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="燃料费用"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_gas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toLeftOf="@+id/tv_gas_token"
                                android:layout_toRightOf="@+id/tv_gas_tmp"
                                android:gravity="right|center"
                                android:textColor="@color/color_dialog_confirm"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_gas_token"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:text="SWT"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_time_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易时间"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_time_tmp"
                                android:gravity="center|right"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_result_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易结果"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/tv_result_tmp"
                                android:gravity="right|center"
                                android:textColor="@color/color_detail_address"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:id="@+id/tv_memo_tmp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交易备注"
                                android:textColor="@color/color_receive_hint"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_memo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_memo_tmp"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textColor="@color/color_detail_address"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </android.support.design.card.MaterialCardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>