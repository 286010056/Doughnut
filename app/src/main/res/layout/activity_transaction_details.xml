<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/split_color"
    android:orientation="vertical">

    <com.doughnut.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/shape_detail_info" />

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/recycler_view"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_dialog_bg"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="当前交易哈希值"
                android:textColor="@color/color_detail_address"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/color_dialog_confirm"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="@color/split_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_type_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易类型"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_type_tmp"
                    android:ellipsize="middle"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_from_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易发起方"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_from_tmp"
                    android:ellipsize="middle"
                    android:gravity="center|right"
                    android:singleLine="true"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_to_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易对家"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_to_tmp"
                    android:ellipsize="middle"
                    android:gravity="right|center"
                    android:singleLine="true"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_amount_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托金额 "
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_amount_tmp"
                    android:gravity="center|right"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_value_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托价格 "
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_value_tmp"
                    android:gravity="right|center"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_transfer_amount_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交金额 "
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_transfer_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_transfer_amount_tmp"
                    android:gravity="center|right"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_transfer_value_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交价格 "
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_transfer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_transfer_value_tmp"
                    android:gravity="right|center"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_transfer_type_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易方式"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_transfer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_transfer_type_tmp"
                    android:gravity="center|right"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_gas_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="燃料费用"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_gas_tmp"
                    android:gravity="right|center"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_time_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_time_tmp"
                    android:gravity="center|right"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_result_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易结果"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_result_tmp"
                    android:gravity="right|center"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_memo_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易备注"
                    android:textColor="@color/color_receive_hint"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_memo_tmp"
                    android:gravity="center|right"
                    android:textColor="@color/color_detail_address"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp" />
    </RelativeLayout>

</LinearLayout>