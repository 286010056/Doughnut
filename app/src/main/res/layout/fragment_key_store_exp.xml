<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_content_padding"
        android:paddingRight="@dimen/dimen_content_padding">

        <TextView
            android:id="@+id/tv_keystore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/shape_privatekey_copy_content"
            android:padding="5dp"
            android:textSize="13sp"
            android:text="lajsdlfjldfjlasdfjlkasjdflkasjdflkjsajsjslkdfjaslkdfjlksdfjlsadfjlasjdfl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_copy_keystore"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_export_privatekey_btnbg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/dialog_btn_copy_private_key"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_keystoreImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/shape_privatekey_copy_content"
            android:padding="5dp"
            android:textSize="13sp"
            android:text="lajsdlfjldfjlasdfjlkasjdflkasjdflkjsajsjslkdfjaslkdfjlksdfjlsadfjlasjdfl"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_copy_keystoreImg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_export_privatekey_btnbg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/btn_export_private_key"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>