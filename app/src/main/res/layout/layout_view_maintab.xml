<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clipChildren="false"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bababa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49.6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_tab_wallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_wallet"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_wallet_click" />

            <TextView
                android:id="@+id/tv_tab_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/btn_asset"
                android:textColor="@color/selector_maintab_item_textcolor"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_dapp"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_dapp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@+id/tv_tab_dapp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_ok" />

            <TextView
                android:id="@+id/tv_tab_dapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/btn_Dapp"
                android:textColor="@color/selector_maintab_item_textcolor"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_tab_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_mine"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_myself_click" />

            <TextView
                android:id="@+id/tv_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/btn_me"
                android:textColor="@color/selector_maintab_item_textcolor"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>