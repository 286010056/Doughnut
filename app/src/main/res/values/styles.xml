<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:listDivider">@drawable/shape_divider</item>
        <!-- 更换右侧actionbar图标-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>-->
    </style>

    <style name="DialogStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <!--隐藏ActionBar-->
        <item name="windowActionBar">false</item>
        <!--不显示标题-->
        <!--<item name="android:layout_marginTop">25dp</item>-->
        <!--<item name="android:"layout_marginRight>25dp</item>-->
    </style>

    <style name="Dialog_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


</resources>
