<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doughnut">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 附近功能要求gps -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 保持屏幕高亮权限组(二维码扫描页需要) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.doughnut.TApplication"
        android:allowBackup="true"
        android:configChanges="locale|layoutDirection|keyboardHidden|keyboard|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.doughnut.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.doughnut.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.FragmentContainerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zxing.activity.CaptureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.WebBrowserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.CreateWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ChooseWalletBlockActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ImportWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.TransactionRecordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ManageWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ModifyWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ChangeWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.TransactionDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.BWDInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.TokenDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.StartBakupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ModifyPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.TokenTransferActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.TokenReceiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ConfirmWalletBakupInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.ChooseTokenTransferActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.doughnut.activity.LanguageActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>